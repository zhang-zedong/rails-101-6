<%= form_for @group do |f| %>
  <%if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  Title
  <br>
  <%= f.text_field :title %>
  <br>
  Description
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.submit "Submit", :disable_with => "Submiting..." %>
<% end %>
